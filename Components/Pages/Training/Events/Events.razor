@page "/training/classes"

@attribute [Authorize]

<PageTitle>Zajêcia</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Zajêcia" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@events" TItem="FISTNESSGYM.Models.database.Event" RowSelect="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="FISTNESSGYM.Models.database.Event" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FISTNESSGYM.Models.database.Event" Property="EventName" Title="Event Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FISTNESSGYM.Models.database.Event" Property="InstructorName" Title="Instructor Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FISTNESSGYM.Models.database.Event" Property="EventStartDate" Title="Event Start Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FISTNESSGYM.Models.database.Event" Property="EventEndDate" Title="Event End Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FISTNESSGYM.Models.database.Event" Property="MaxParticipants" Title="Max Participants">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FISTNESSGYM.Models.database.Event" Property="Participants" Title="Participants">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FISTNESSGYM.Models.database.Event" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="_event">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, _event)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
