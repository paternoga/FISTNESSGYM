@page "/add-event"
@using FISTNESSGYM.Services
@inject AuthorizationService AuthorizationService
@attribute [Authorize]

@if (AuthorizationService.IsWorker || AuthorizationService.IsTrainer || AuthorizationService.IsAdmin)
{
    <PageTitle>DODAJ ZAJÊCIA</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Nie mo¿na zapisaæ zajêæ</RadzenAlert>

        <RadzenTemplateForm TItem="FISTNESSGYM.Models.database.Event" Data="@_event" Visible="@(_event != null)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Nazwa zajêæ" Component="EventName" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@_event.EventName" Name="EventName" />
                    <RadzenRequiredValidator Component="EventName" Text="Nazwa zajêæ jest wymagana" />
                </RadzenColumn>
            </RadzenRow>

            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Imiê i nazwisko instruktora" Component="InstructorName" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@_event.InstructorName" Name="InstructorName" />
                    <RadzenRequiredValidator Component="InstructorName" Text="Imiê i nazwisko instruktora jest wymagane" />
                </RadzenColumn>
            </RadzenRow>

            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Email instruktora" Component="InstructorEmail" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Name="InstructorEmail"
                                    @bind-Value="@_event.InstructorEmail"
                                    Data="@instructorEmails"
                                    Style="width: 100%;"
                                    Placeholder="Wybierz email instruktora" />
                    <RadzenRequiredValidator Component="InstructorEmail" Text="Email instruktora jest wymagany" />
                </RadzenColumn>
            </RadzenRow>

            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Data rozpoczêcia" Component="EventStartDate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker style="display: block; width: 100%" @bind-Value="@_event.EventStartDate" ShowTime="true" Name="EventStartDate" />
                    <RadzenRequiredValidator Component="EventStartDate" Text="Data rozpoczêcia jest wymagana" />
                </RadzenColumn>
            </RadzenRow>

            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Data zakoñczenia" Component="EventEndDate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker style="display: block; width: 100%" @bind-Value="@_event.EventEndDate" ShowTime="true" Name="EventEndDate" />
                    <RadzenRequiredValidator Component="EventEndDate" Text="Data zakoñczenia jest wymagana" />
                </RadzenColumn>
            </RadzenRow>

            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Maksymalna liczba uczestników" Component="MaxParticipants" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@_event.MaxParticipants" Name="MaxParticipants" />
                    <RadzenRequiredValidator Component="MaxParticipants" Text="Maksymalna liczba uczestników jest wymagana" />
                    <RadzenNumericRangeValidator Component="MaxParticipants" Min="1" Text="Maksymalna liczba uczestników musi byæ wiêksza ni¿ 0" />
                </RadzenColumn>
            </RadzenRow>


            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Zapisz" Variant="Variant.Flat" />
                <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Anuluj" Variant="Variant.Flat" Click="@CancelButtonClick" />
            </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>
}
else
{
    <RadzenText>Próba nieautoryzowanego dostêpu zostaje zg³oszona na policjê!</RadzenText>
    <PageTitle>Próba nieautoryzowanego dostêpu zostaje zg³oszona na policjê!</PageTitle>
}