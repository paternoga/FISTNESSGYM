@page "/orders"

@attribute [Authorize]

<PageTitle>Orders</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Orders" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=6>
     <RadzenCard style="height: 100%">
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@orders" TItem="FISTNESSGYM.Models.database.Order" RowSelect="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="FISTNESSGYM.Models.database.Order" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FISTNESSGYM.Models.database.Order" Property="AspNetUser.UserName" Title="Asp Net User">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FISTNESSGYM.Models.database.Order" Property="OrderDate" Title="Order Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FISTNESSGYM.Models.database.Order" Property="TotalAmount" Title="Total Amount">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FISTNESSGYM.Models.database.Order" Property="OrderStatus.Name" Title="Order Status">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FISTNESSGYM.Models.database.Order" Property="OrderStatusName" Title="Order Status Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FISTNESSGYM.Models.database.Order" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="order">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, order)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>
    </RadzenCard>

    </RadzenColumn>
        <RadzenColumn SizeMD=6>
        <RadzenCard style="height: 100%;margin-top:0px;">
            <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Order</RadzenAlert>
            <RadzenTemplateForm TItem="FISTNESSGYM.Models.database.Order" Data="@order" Visible="@(order != null)" Submit="@FormSubmit">
                <RadzenRow style="margin-bottom: 1rem">
                    <RadzenColumn SizeMD="3">
                        <RadzenLabel Text="Asp Net User" Component="AspNetUser" style="width: 100%" />
                    </RadzenColumn>
                    <RadzenColumn SizeMD="9">
                        <RadzenDropDown Data="@aspNetUsersForUserId" TextProperty="UserName" ValueProperty="Id" AllowClear=true
                             Placeholder="Choose AspNetUser" style="display: block; width: 100%" @bind-Value="@order.UserId" Name="UserId"
                               />
                    </RadzenColumn>
                </RadzenRow>
                <RadzenRow style="margin-bottom: 1rem">
                    <RadzenColumn SizeMD="3">
                        <RadzenLabel Text="Order Date" Component="OrderDate" style="width: 100%" />
                    </RadzenColumn>
                    <RadzenColumn SizeMD="9">
                        <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@order.OrderDate" Name="OrderDate" />
                        <RadzenRequiredValidator Component="OrderDate" Text="OrderDate is required" />
                    </RadzenColumn>
                </RadzenRow>
                <RadzenRow style="margin-bottom: 1rem">
                    <RadzenColumn SizeMD="3">
                        <RadzenLabel Text="Total Amount" Component="TotalAmount" style="width: 100%" />
                    </RadzenColumn>
                    <RadzenColumn SizeMD="9">
                        <RadzenNumeric style="display: block; width: 100%" @bind-Value="@order.TotalAmount" Name="TotalAmount" />
                        <RadzenRequiredValidator Component="TotalAmount" Text="TotalAmount is required" />
                    </RadzenColumn>
                </RadzenRow>
                <RadzenRow style="margin-bottom: 1rem">
                    <RadzenColumn SizeMD="3">
                        <RadzenLabel Text="Order Status" Component="OrderStatus" style="width: 100%" />
                    </RadzenColumn>
                    <RadzenColumn SizeMD="9">
                        <RadzenDropDown Data="@orderStatusesForOrderStatusId" TextProperty="Name" ValueProperty="Id" AllowClear=true
                             Placeholder="Choose OrderStatus" style="display: block; width: 100%" @bind-Value="@order.OrderStatusId" Name="OrderStatusId"
                               />
                    </RadzenColumn>
                </RadzenRow>
                <RadzenRow style="margin-bottom: 1rem">
                    <RadzenColumn SizeMD="3">
                        <RadzenLabel Text="Order Status Name" Component="OrderStatusName" style="width: 100%" />
                    </RadzenColumn>
                    <RadzenColumn SizeMD="9">
                        <RadzenTextBox style="display: block; width: 100%" @bind-Value="@order.OrderStatusName" Name="OrderStatusName" />
                    </RadzenColumn>
                </RadzenRow>
              <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                        <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                        <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick" Visible=false />
              </RadzenStack>
            </RadzenTemplateForm>
        </RadzenCard>
        </RadzenColumn>  </RadzenRow>
</RadzenStack>
